<h2>Search by Tag</h2>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search by Tag:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<h2>Resources</h2>
<div id='all-resources'>
      <% if @q %>
      <h3><%=@q.downcase%></h3>
        <% @tags.each do |tag| %>
          <% if tag.name == @q.downcase %>
            <% tag.resources.each do |resource| %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
  <ul>
    <% @resources.each do |resource| %>
    <li>
      <button><i class="fa fa-star-o " aria-hidden="true"></i></button>
      <%= resource.title %> - Created By: User #<%= resource.creator_id %> <%= link_to resource.title, resource.url %> </li>
    <% end %>
  </ul>
</div>
